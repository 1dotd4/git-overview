#!/bin/sh
echo "# Generated with ./configure" > config.mk
# function that writes macros to the config.mk
setmacro () {
  echo "$1=$2" >> config.mk
}

COMPILER=csc
if [ `uname` = "OpenBSD" ] ; then
  echo "Detected OpenBSD"
  COMPILER=chicken-csc
  echo "Using chicken-csc as compiler"
else
  echo "Using csc as compiler"
fi

setmacro COMPILER $COMPILER
